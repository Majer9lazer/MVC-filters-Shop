@using MVC_Filters.Models
@model IEnumerable<MVC_Filters.Models.ErrorModel>

@{
    ViewBag.Title = "ErrorsStatistics";
}

<h2>Сведения об ошибках</h2>


<table class="table">
    <tr>
        <th>
            IsUserAuthenticated
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfError)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StackTrace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ErrorCode)
        </th>
        <th></th>
    </tr>

    @foreach (ErrorModel item in Model.OrderByDescending(o=>o.DateOfError))
    {
        <tr>
            <td>
                @item.IsAuthenticated.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfError)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StackTrace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorCode)
            </td>
            <td>
                @Html.ActionLink("Details", "ErrorStatistics_Details", new
                {
                    id=item.Id
                }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>
